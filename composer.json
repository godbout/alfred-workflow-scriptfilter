{
    "name": "godbout/alfred-workflow-scriptfilter",
    "description": "Generate Alfred 3 or 4 Workflow Results in PHP with a laugh.",
    "keywords": [
        "alfred",
        "workflow",
        "alfred-workflow",
        "scriptfilter",
        "results",
        "php"
    ],
    "homepage": "https://github.com/godbout/alfred-workflow-scriptfilter",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Guillaume Leclerc",
            "email": "guill@sleeplessmind.com.mo",
            "role": "Craftsman"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.30",
        "phpunit/phpunit": "^9.5",
        "scrutinizer/ocular": "1.8.0",
        "symfony/yaml": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Godbout\\Alfred\\Workflow\\": "src"
        }
    },
    "scripts": {
        "format": "php-cs-fixer fix -vvv --config=.php_cs.dist --ansi",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
