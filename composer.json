{
    "name": "godbout/alfred-workflow-php",
    "description": "Makes it easy and fun to build Alfred 3 Workflows in PHP.",
    "keywords": [
        "godbout",
        "alfred-workflow-php"
    ],
    "homepage": "https://github.com/godbout/alfred-workflow-php",
    "license": "MIT License (MIT)",
    "type": "library",
    "authors": [
        {
            "name": "Guill Lo",
            "email": "guill@sleeplessmind.com.mo",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "codedungeon/phpunit-result-printer": "^0.25.0"
    },
    "autoload": {
        "psr-4": {
            "Godbout\\Alfred\\": "src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
